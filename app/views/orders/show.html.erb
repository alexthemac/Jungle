<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <%= @order.email %></h1>
  <%= humanized_money_with_symbol @order.total_cents / 100 %></h1>
 

  <% @line_items.each do |item| %>
    </br>
    <%= render 'line_item',  product: item.product, product_id: item[:product_id], quantity: item[:quantity], item_price_cents: item[:item_price_cents], total_price_cents: item[:total_price_cents] %>
    </br>
  <% end %>


  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
